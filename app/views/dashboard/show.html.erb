<% content_for :title, "#{@agency.name} | eCFR Analyzer" %>

<!-- Header -->
<div class="mb-8">
  <%= link_to dashboard_path, class: "inline-flex items-center gap-2 text-sm text-slate-400 hover:text-white transition-colors mb-4" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back to Dashboard
  <% end %>

  <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center text-xl font-bold text-slate-950 shadow-xl shadow-emerald-500/20">
        <%= @agency.name[0..1].upcase %>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-white"><%= @agency.name %></h1>
        <p class="text-slate-400 font-mono text-sm"><%= @agency.slug %></p>
      </div>
    </div>

    <div class="flex items-center gap-2 px-4 py-2 bg-slate-800/50 rounded-xl border border-slate-700/50">
      <span class="text-sm text-slate-400"><%= pluralize(@snapshots.count, "snapshot") %></span>
    </div>
  </div>
</div>

<% if @snapshots.any? %>
  <% latest = @snapshots.last %>
  <% oldest = @snapshots.first %>
  <% industry_scores = latest.parsed_metrics["industry_scores"] || {} %>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl p-5 border border-slate-700/50">
      <p class="text-sm font-medium text-slate-400 mb-1">Current Word Count</p>
      <p class="text-2xl font-bold text-white"><%= number_with_delimiter(latest.word_count) %></p>
      <% if @snapshots.size > 1 && oldest.word_count > 0 %>
        <p class="text-xs mt-2 text-slate-500">
          Started at <%= number_with_delimiter(oldest.word_count) %>
        </p>
      <% end %>
    </div>

    <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl p-5 border border-slate-700/50">
      <p class="text-sm font-medium text-slate-400 mb-1">Sections</p>
      <p class="text-2xl font-bold text-white"><%= number_with_delimiter(latest.section_count) %></p>
    </div>

    <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl p-5 border border-slate-700/50">
      <p class="text-sm font-medium text-slate-400 mb-1">Growth Rate</p>
      <% if @growth_rate && @snapshots.size > 1 %>
        <p class="text-2xl font-bold <%= @growth_rate > 0 ? 'text-emerald-400' : @growth_rate < 0 ? 'text-rose-400' : 'text-white' %>">
          <%= @growth_rate > 0 ? '+' : '' %><%= @growth_rate %>%
        </p>
        <p class="text-xs text-slate-500 mt-2">
          <% if @days_tracked && @days_tracked > 0 %>
            Over <%= @days_tracked %> days
          <% end %>
        </p>
      <% else %>
        <p class="text-2xl font-bold text-slate-500">â€”</p>
        <p class="text-xs text-slate-500 mt-2">Need 2+ snapshots</p>
      <% end %>
    </div>

    <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl p-5 border border-slate-700/50">
      <p class="text-sm font-medium text-slate-400 mb-1">Checksum</p>
      <code class="text-sm font-mono text-emerald-400 break-all"><%= latest.checksum_sha256[0..15] %>â€¦</code>
      <p class="text-xs text-slate-500 mt-2">SHA-256 hash</p>
    </div>
  </div>

  <!-- Industry Targeting Analysis -->
  <% if industry_scores.any? %>
    <div class="bg-slate-900/50 rounded-2xl border border-slate-800/60 overflow-hidden mb-8">
      <div class="px-6 py-4 border-b border-slate-800/60">
        <h2 class="text-lg font-semibold text-white">Industry Targeting Analysis</h2>
        <p class="text-sm text-slate-400 mt-1">Keyword mentions per 10,000 words â€” higher scores indicate more regulatory focus on that sector</p>
      </div>

      <div class="p-6">
        <% max_score = industry_scores.values.map { |v| v["score"].to_f }.max || 1 %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% industry_scores.first(14).each do |key, data| %>
            <% bar = industry_bar(key, data["score"], max_score) %>
            <% next if data["score"].to_f == 0 %>
            <div class="group">
              <div class="flex items-center justify-between mb-1.5">
                <div class="flex items-center gap-2">
                  <span class="text-lg"><%= bar[:config][:emoji] %></span>
                  <span class="text-sm font-medium text-slate-300"><%= bar[:config][:name] %></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-xs text-slate-500"><%= number_with_delimiter(data["matches"]) %> matches</span>
                  <span class="text-sm font-semibold text-white"><%= data["score"] %></span>
                </div>
              </div>
              <div class="h-2 bg-slate-800 rounded-full overflow-hidden">
                <div class="h-full <%= bar[:bg_class] %> rounded-full transition-all duration-500" style="width: <%= bar[:percentage] %>%"></div>
              </div>
            </div>
          <% end %>
        </div>

        <% top_3 = top_industries(industry_scores, limit: 3) %>
        <% if top_3.any? %>
          <div class="mt-6 p-4 bg-slate-800/30 rounded-xl">
            <p class="text-sm text-slate-400">
              <span class="text-white font-medium">Primary regulatory focus:</span>
              This agency's regulations most heavily target 
              <% top_3.each_with_index do |(key, data), idx| %>
                <span class="font-medium text-white"><%= data["name"] %></span><%= idx < top_3.size - 1 ? (idx == top_3.size - 2 ? ' and ' : ', ') : '' %>
              <% end %>
              sectors.
            </p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Timeline / History Table -->
  <div class="bg-slate-900/50 rounded-2xl border border-slate-800/60 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-800/60 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-white">Snapshot History</h2>
      <span class="text-sm text-slate-400">Showing all <%= @snapshots.count %> snapshots</span>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="text-left text-xs font-medium text-slate-400 uppercase tracking-wider">
            <th class="px-6 py-4">Date</th>
            <th class="px-6 py-4">Word Count</th>
            <th class="px-6 py-4">Change</th>
            <th class="px-6 py-4">% Change</th>
            <th class="px-6 py-4">Sections</th>
            <th class="px-6 py-4">Checksum</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-800/40">
          <% @chart_data.reverse.each_with_index do |data, i| %>
            <% snap = @snapshots.reverse[i] %>
            <tr class="<%= i == 0 ? 'bg-emerald-500/5' : '' %> hover:bg-slate-800/30 transition-colors">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <% if i == 0 %>
                    <span class="w-2 h-2 bg-emerald-500 rounded-full"></span>
                  <% else %>
                    <span class="w-2 h-2 bg-slate-600 rounded-full"></span>
                  <% end %>
                  <span class="font-medium text-white"><%= snap.snapshot_date.strftime("%B %d, %Y") %></span>
                  <% if i == 0 %>
                    <span class="text-xs px-2 py-0.5 rounded-full bg-emerald-500/10 text-emerald-400 font-medium">Latest</span>
                  <% elsif i == @chart_data.size - 1 %>
                    <span class="text-xs px-2 py-0.5 rounded-full bg-slate-700/50 text-slate-400 font-medium">First</span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4">
                <span class="font-semibold text-white"><%= number_with_delimiter(data[:word_count]) %></span>
              </td>
              <td class="px-6 py-4">
                <% delta = data[:delta] %>
                <% if delta.nil? %>
                  <span class="text-slate-500">â€”</span>
                <% elsif delta > 0 %>
                  <span class="inline-flex items-center gap-1 text-emerald-400">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                    </svg>
                    +<%= number_with_delimiter(delta) %>
                  </span>
                <% elsif delta < 0 %>
                  <span class="inline-flex items-center gap-1 text-rose-400">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                    </svg>
                    <%= number_with_delimiter(delta) %>
                  </span>
                <% else %>
                  <span class="text-slate-400">No change</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% pct = data[:pct_change] %>
                <% if pct.nil? %>
                  <span class="text-slate-500">â€”</span>
                <% elsif pct > 0 %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-emerald-500/10 text-emerald-400">
                    +<%= pct %>%
                  </span>
                <% elsif pct < 0 %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-rose-500/10 text-rose-400">
                    <%= pct %>%
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-slate-700/50 text-slate-300">
                    0%
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <span class="text-slate-300"><%= number_with_delimiter(data[:section_count]) %></span>
              </td>
              <td class="px-6 py-4">
                <code class="text-xs font-mono text-slate-500 bg-slate-800/50 px-2 py-1 rounded"><%= snap.checksum_sha256[0..11] %>â€¦</code>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <% if @snapshots.size == 1 %>
    <div class="mt-6 p-4 bg-slate-800/30 rounded-xl border border-slate-700/50">
      <p class="text-sm text-slate-400">
        <span class="text-amber-400 font-medium">ðŸ’¡ Tip:</span> 
        Run <code class="bg-slate-800 px-2 py-0.5 rounded text-emerald-400 font-mono text-xs">bin/rails ecfr:ingest DATE=YYYY-MM-DD</code> 
        with different dates to track historical changes and see growth rates.
      </p>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="bg-slate-900/50 rounded-2xl border border-slate-800/60 overflow-hidden">
    <div class="flex flex-col items-center justify-center py-16 px-6">
      <div class="w-16 h-16 rounded-2xl bg-slate-800/60 flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-white mb-2">No snapshots yet</h3>
      <p class="text-slate-400 text-sm text-center max-w-md mb-6">Run the ingestion task to capture regulatory data for this agency.</p>
      <code class="bg-slate-800/80 text-emerald-400 px-4 py-2 rounded-lg font-mono text-sm border border-slate-700/50">bin/rails ecfr:ingest</code>
    </div>
  </div>
<% end %>
